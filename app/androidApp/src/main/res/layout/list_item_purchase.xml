<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/half_gap"
    android:paddingBottom="@dimen/half_gap"
    android:paddingStart="@dimen/default_gap"
    android:paddingEnd="@dimen/default_gap"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="99"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/purchase_name"
            style="@style/ListText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Purchaseable" />

        <TextView
            android:id="@+id/purchase_variants"
            style="@style/ListSubText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Variant" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/dec"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/subtract_circle" />

    <TextView
        android:id="@+id/purchase_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="24dp"
        tools:text="1" />

    <ImageButton
        android:id="@+id/inc"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:src="@drawable/add_circle" />

</LinearLayout>